{
  "name": "express-rest-api-boilerplate",
  "version": "0.0.0",
  "author": "Lukas Aichbauer <l.aichbauer@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aichbauer/express-rest-api-boilerplate.git"
  },
  "homepage": "https://github.com/aichbauer/express-rest-api-boilerplate#readme",
  "bugs": {
    "url": "https://github.com/aichbauer/express-rest-api-boilerplate/issues"
  },
  "scripts": {
    "create-sqlite-db": "shx touch ./db/database.sqlite",
    "dev": "cross-env NODE_ENV=development node ./dist/api/api.js",
    "drop-sqlite-db": "shx rm ./db/database.sqlite",
    "lint": "eslint ./api/. ./config/. ./test/.",
    "nodemon": "nodemon --exec npm babel-node -- ./api/api.js",
    "poststart": "npm run create-sqlite-db",
    "prepush": "npm test",
    "prestart": "npm run drop-sqlite-db || true",
    "pretest": "npm run lint",
    "production": "cross-env NODE_ENV=production node ./api/api.js",
    "start": "npm run nodemon",
    "test": "npm run create-sqlite-db; cross-env NODE_ENV=testing jest --coverage; npm run drop-sqlite-db",
    "test-ci": "jest --coverage --forceExit",
    "transpile-api": "babel ./api --out-dir dist/api",
    "transpile-config": "babel ./config --out-dir dist/config",
    "transpile": "npm run transpile-api && yarn transpile-config"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "core-js": "^3.8.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-routes-mapper": "^1.0.2",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.1",
    "mariadb": "^2.5.2",
    "regenerator-runtime": "^0.13.7",
    "sequelize": "^6.0.0",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/node": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "cross-env": "^5.1.4",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "nodemon": "^1.17.3",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  }
}
